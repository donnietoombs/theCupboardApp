
{{> navbar}}
<div id="index-banner" class="parallax-container">
    <div class="section no-pad-bot">
        <div class="container">
            <br><br>
            <h1 class="header center black-text ">Your Food Preparation Partner</h1>
            <div class="row center">
                <h5 class="header col s12 white-text">Let us help you decide what you are going to have for dinner
                    using what you have in your cupboard!</h5>
            </div>

            <div id="signup" class="modal ">
                <h5 class="modal-close">&#10005;</h5>
                <div class="modal-content center">
                    <h4>Register</h4>
                    <br>
                    <form class="signup">
                        <div class="form-group">
                            <label for="exampleInputEmail1">Email address</label>
                            <input type="email" class="form-control" id="email-input" placeholder="Email">
                        </div>
                        <div class="form-group">
                            <label for="exampleInputPassword1">Password</label>
                            <input type="password" class="form-control" id="password-input" placeholder="Password">
                        </div>
                        <div style="display: none" id="alert" class="alert alert-danger" role="alert">
                            <span class="glyphicon glyphicon-exclamation-sign" aria-hidden="true"></span>
                            <span class="sr-only">Error:</span> <span class="msg"></span>
                        </div>
                        <button type="submit" class="btn btn-default">Sign Up</button>
                    </form>
                    <br />
                    <p>Or log in <a href="/login">here</a></p>
                </div>
            </div>

            <br><br>

        </div>
    </div>
    <div class="parallax"><img src="/assets/images/ingredients-cuttingboardsm.jpg" alt="Unsplashed background img 1"></div>
</div>
<div class="container">
    <div class="section">

         <form action="/api/recipes" method="POST">
        <div class="form-group">
          <input class="form-control" type="text" name="name" placeholder="name">
        </div>
        <div class="form-group">
          <input class="form-control" type="text" name="imageurl" placeholder="image url">
        </div>
        <div class="form-group">
          <input class="form-control" type="text" name="url" placeholder="description">
        </div>
        <div class="form-group">
          <button class="btn btn-lg btn-primary btn-block" type="submit">Submit</button>
        </div>
      </form>
  </div>
</div>

<div class="parallax-container valign-wrapper">
    <div class="section no-pad-bot">
        <div class="container">
            <div class="row center">
                <h5 class="header col s12 teal-text">Register to take advantage of all features</h5>
            </div>
        </div>
    </div>
    <div class="parallax"><img src="/assets/images/steak-cuttingboardsm.jpg" alt="Unsplashed background img 2"></div>
</div>
