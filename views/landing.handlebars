{{> navbar}}

<div id="index-banner" class="parallax-container">
    <div class="section no-pad-bot">
        <div class="container">
            <br><br>
            <h1 class="header center" id="indexTitle">Your Food Preparation Partner</h1>
            <div class="row center">
                <h5 class="header col s12 white-text">Let us help you decide what you are going to have for dinner
                    using what you have in your cupboard!</h5>
            </div>
            <div class="row center">
                <a href="#signup" id="download-button" class="btn-large waves-effect waves-light blue darken-1 modal-trigger">Sign
                    Up!</a>
            </div>
            <div id="signup" class="modal ">
                <h5 class="modal-close">&#10005;</h5>
                <div class="modal-content center">
                    <h4>Register</h4>
                    <br>
                    <form class="signup">
                        <div class="form-group">
                            <label for="exampleInputEmail1">Email address</label>
                            <input type="email" class="form-control" id="email-input" placeholder="Email">
                        </div>
                        <div class="form-group">
                            <label for="exampleInputPassword1">Password</label>
                            <input type="password" class="form-control" id="password-input" placeholder="Password">
                        </div>
                        <div style="display: none" id="alert" class="alert alert-danger" role="alert">
                            <span class="glyphicon glyphicon-exclamation-sign" aria-hidden="true"></span>
                            <span class="sr-only">Error:</span> <span class="msg"></span>
                        </div>
                        <button type="submit" class="btn btn-default">Sign Up</button>
                    </form>
                    <br />
                    <p>Or log in <a href="/login">here</a></p>
                </div>
            </div>

            <br><br>

        </div>
    </div>
    <div class="parallax"><img src="/assets/images/food-table.jpg" alt="Unsplashed background img 1"></div>
</div>
